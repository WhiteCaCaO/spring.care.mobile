<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="요양보호사 상세 정보"
            style="@style/TitleTextStyle" />

        <ImageView
            android:id="@+id/caregiver_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultmale"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="이름"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/caregiver_name_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="지역"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/caregiver_country_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="경력"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/caregiver_experience_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="자격증"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/caregiver_certification_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp" />


        <TextView
            android:text="노인 상세 정보"
            style="@style/TitleTextStyle" />

        <ImageView
            android:id="@+id/senior_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultmale"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="이름"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/senior_name_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="건강 상태"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/senior_health_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="요청 사항"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/senior_requirements_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp" />


        <TextView
            android:text="매칭 추가 정보"
            style="@style/TitleTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="시작 날짜"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/start_date_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="종료 날짜"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/end_date_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="시작 시간"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/start_time_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="종료 시간"
                style="@style/LabelTextStyle" />

            <TextView
                android:text=":  "
                style="@style/SeparatorTextStyle" />

            <TextView
                android:id="@+id/end_time_textview"
                style="@style/ContentTextStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>